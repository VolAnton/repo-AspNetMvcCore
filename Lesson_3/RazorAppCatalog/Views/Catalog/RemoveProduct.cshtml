@model Catalog

@{
    ViewData["Title"] = "Удаление товаров";
}

<h1>Форма удаления товаров из каталога</h1>

<form method="post">
    Id: <input type="text" name="id" required />
    <br/>
    Название: <input type="text" name="name" required/>
    <br/>
    <input type="submit" name="submit" value="Удалить" />
</form>